@page "{id?}"
@model Vegefood.Pages.OrderDetailModel
@{
    ViewData["Title"] = "Order Detail";

}

<div class="container">
    <h1>Order Details</h1>
    <table class="table text-center">
        <thead class="thead-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.FirstOrDefault().Product.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.FirstOrDefault().Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.FirstOrDefault().Product.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.FirstOrDefault().Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderItems.FirstOrDefault().Product.Description)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model.OrderItems)
            {
                <tr>
                    <td>
                        <img src="/@Html.DisplayFor(modelItem => orderItem.Product.Image)" width="100" height="100" />
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.Product.Name)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => orderItem.Product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => orderItem.Quantity)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => orderItem.Product.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
